{% extends 'AdminCoreBundle::layout.html.twig' %}

{% block content_title %}
    {{ 'Order Zone'|trans }}
{% endblock content_title %}

{% block breadcrumb %}
    {% include "@AdminCore/Common/breadcrumb.html.twig" with {
        breadcrumb: {
            "Orders": {
                "url": url('admin_order_list')
            },
            ("View #" ~ id): {
                "active" : true
            }
        }
    } %}
{% endblock breadcrumb %}

{% block content %}

    <div class="row">
        <div class="col-md-6">
            {{ render(url("admin_order_view_component", {
                'id': id,
            })) }}
        </div>
        <div class="col-md-6">
            {{ render(url("admin_order_gallery_component", {
                'id': id,
            })) }}
        </div>
    </div>

{% endblock content %}
