{% extends 'AdminCoreBundle::layout.html.twig' %}

{% block content_title %}
    {{ 'Page Zone'|trans }}
{% endblock content_title %}

{% block breadcrumb %}

    {% set entityHeader = page.id
        ? 'Edit ' ~ page.name
        : 'Create new Page'
    %}

    {% include '@AdminCore/Common/breadcrumb.html.twig' with {
        breadcrumb: {
            'Pages': {
                'url': url('admin_page_list')
            },
            (entityHeader): {
                'active' : true
            }
        }
    } %}

{% endblock breadcrumb %}

{% block content %}

    {% if page.id %}
        {{ render(url("admin_page_edit_component", {
            'id': page.id
        })) }}
    {% else %}
        {{ render(url("admin_page_new_component")) }}
    {% endif %}

{% endblock content %}
