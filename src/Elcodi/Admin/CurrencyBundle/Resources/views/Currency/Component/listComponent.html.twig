{% extends 'AdminCoreBundle::Common/listComponent.html.twig' %}


{% block title %}
    {{ 'Currency list'|trans }}
{% endblock title %}


{% block table_attributes %}
    data-tc-modules="table"
{% endblock table_attributes %}


{% block table_head %}
    {% include "@AdminCore/Tables/head.html.twig" with {
        rows: {
            "Symbol": {"sorting_disabled": true, "width": 10},
            "Iso": {"sorting_disabled": true, "width": 10},
            "Name": {"sorting_disabled": true},
            "Status": {width:"10", "sorting_disabled": true},
        },
        class: "currency",
        actions: false
    } %}
{% endblock table_head %}


{% block table_body_row %}
    <td>
        {{ entity.symbol }}
    </td>
    <td>
        {{ entity.iso }}
    </td>
    <td>
        {{ entity.name }}
    </td>
    <td>
        <div class="switch">
            <input id="enable-{{ entity.iso }}" type="hidden" value="{{ url("admin_currency_enable", {"iso": entity.iso }) }}" />
            <input id="disable-{{ entity.iso }}" type="hidden" value="{{ url("admin_currency_disable", {"iso": entity.iso }) }}" />
            <input id="{{ entity.iso }}" type="checkbox" {% if entity.enabled %}checked="checked"{% endif %} />
            <label for="{{ entity.iso }}"></label>
        </div>
    </td>

{% endblock table_body_row %}


{% block table_paginator_links %}
{% endblock table_paginator_links %}
