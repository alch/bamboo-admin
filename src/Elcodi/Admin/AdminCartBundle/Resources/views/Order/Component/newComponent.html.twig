{% extends 'AdminCoreBundle::Common/formComponent.html.twig' %}

{% form_theme form 'AdminCoreBundle::Forms/fields.html.twig' %}

{% block title %}
    {{ 'New Order'|trans }}
{% endblock title %}

{% block content %}

    {{ form_start(form, {'action': url('admin_order_save')}) }}

        {{ form_row(form.quantity) }}
        {{ form_row(form.productAmount) }}
        {{ form_row(form.couponAmount) }}
        {{ form_row(form.amount) }}
        {{ form_row(form.createdAt) }}
        {{ form_row(form.updatedAt) }}
        {{ form_row(form.customer) }}
        {{ form_row(form.cart) }}
        {{ form_row(form.lastOrderHistory) }}
        {{ form_row(form.currency) }}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
                <a href="{{ path('admin_order_list') }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>
            </div>
        </div>

    {{ form_end(form) }}

{% endblock content %}
